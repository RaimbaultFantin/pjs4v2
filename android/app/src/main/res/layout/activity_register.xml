<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23272A"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btnCo"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="151dp"
        android:background="@drawable/btnRegi"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="add"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/PswRegi"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/EmailRegi"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/NomRegi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/PrenomRegi" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="503dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/ConfirmPswRegi" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="287dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="63dp"
        app:srcCompat="@drawable/TitreRegi" />


</RelativeLayout>