<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23272A"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/labelCo"
        android:layout_width="113dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="426dp"
        android:text="Sport \n Manager"
        android:textAlignment="center"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnCo"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="151dp"
        android:background="#00E21A1A"
        android:backgroundTint="#FD009688"
        android:backgroundTintMode="add"
        android:text="LOGIN"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="308dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="239dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnInscription"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="27dp"
        android:text="Button" />


</RelativeLayout>